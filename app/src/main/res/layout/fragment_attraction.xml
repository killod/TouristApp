<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attraction_title_label"/>

    <EditText
        android:id="@+id/attraction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/attraction_title_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attraction_details_label"/>

    <Button
        android:id="@+id/attraction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/attraction_seen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attraction_seen_label"/>

</LinearLayout>